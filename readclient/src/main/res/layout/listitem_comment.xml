<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@color/white"
      android:descendantFocusability="blocksDescendants"
      android:orientation="horizontal"
      android:paddingBottom="12dp" >

      <com.dzg.readclient.ui.view.CircleImageView
          android:id="@+id/comment_user_img"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="12dp"
          android:scaleType="fitXY"
          android:src="@drawable/default_portrait" />

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:orientation="vertical"
          android:paddingTop="12dp" >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" >

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical" >

                  <TextView
                      android:id="@+id/comment_user_nick"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="欧巴啊"
                      android:textColor="@color/main_color"
                      android:textSize="14sp" />

                  <TextView
                      android:id="@+id/comment_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="2dp"
                      android:text="7月8号"
                      android:textColor="@color/light_grey"
                      android:textSize="12sp" />
              </LinearLayout>

              <!-- <RelativeLayout
                  android:id="@+id/comment_support_layout"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent" >

                  <TextView
                      android:id="@+id/comment_support_num"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:layout_marginTop="12dp"
                      android:drawablePadding="2dp"
                      android:drawableRight="@drawable/ding_selector"
                      android:gravity="center_vertical"
                      android:text="50"
                      android:textColor="@color/dark_grey"
                      android:textSize="12sp" />
              </RelativeLayout> -->
          </LinearLayout>

          <TextView
              android:id="@+id/comment_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="12dp"
              android:layout_marginTop="4dp"
              android:lineSpacingExtra="6dp"
              android:text="bbk"
              android:textColor="@color/dark_grey"
              android:textSize="14sp" />
      </LinearLayout>

  </LinearLayout>
