<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bg_action_bar"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/nav_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/main_margin"
            android:paddingRight="@dimen/main_margin"
			android:src="@mipmap/navi_menu"
			/>
        <LinearLayout
	        android:id="@+id/rl_column"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal" >
	        <com.dzg.readclient.ui.view.CategoryTabStrip
	            android:id="@+id/categoryTabStrip"
	            android:layout_width="wrap_content"
	            android:layout_height="30dp"
	            android:background="@drawable/bg_category"
	            android:scrollbars="none" >
	        </com.dzg.readclient.ui.view.CategoryTabStrip>
	    </LinearLayout>
        
        <ImageView 
            android:id="@+id/refresh"
			android:layout_width="40dp"
			android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:src="@drawable/refresh_selector"/>
    </RelativeLayout>
</merge>